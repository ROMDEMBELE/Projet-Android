<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.grenoble.miage.projet.MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="VOITURE"
        android:onClick="startMainVoiture"
        android:id="@+id/button_voiture"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_add_voiture"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:onClick="startAddVoiture"
        android:text="+"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_voiture" />

    <Button
        android:id="@+id/button_historique"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="HISTORIQUE" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_add_voiture"
        android:layout_alignParentStart="true">

        <ListView
            android:id="@+id/list_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <Button
        android:id="@+id/button_add_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="NOUVEAU TICKET"
        android:onClick="startAddTicket"
        android:layout_alignParentBottom="true" />



</RelativeLayout>
